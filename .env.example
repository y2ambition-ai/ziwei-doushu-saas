# 环境变量配置
# 复制此文件为 .env.local 并填入真实值

# ==================== 数据库 ====================
# PostgreSQL 连接串 (Vercel Postgres / Supabase)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ==================== Stripe 支付 ====================
# 测试环境密钥 (生产环境需替换)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# ==================== 火山引擎豆包大模型 ====================
# API Key (从火山引擎控制台获取)
DOUBAO_API_KEY="your-doubao-api-key"
# API Base URL (火山引擎 OpenAI 兼容端点)
DOUBAO_BASE_URL="https://ark.cn-beijing.volces.com/api/v3"
# 模型 ID (可选，默认 doubao-pro-32k-241215)
DOUBAO_MODEL="doubao-pro-32k-241215"

# ==================== Resend 邮件服务 (免费版每月3000封) ====================
# API Key (从 resend.com 获取)
RESEND_API_KEY="re_..."
# 发件人邮箱 (需在 Resend 后台验证域名)
EMAIL_FROM="noreply@yourdomain.com"

# ==================== 应用配置 ====================
# 生产环境 URL
NEXT_PUBLIC_URL="http://localhost:3000"

# ==================== 可选：错误监控 ====================
# Sentry DSN (从 sentry.io 项目设置获取)
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
# SENTRY_AUTH_TOKEN="sntrys_..." (用于上传 source maps)
# SENTRY_ORG="your-org"
# SENTRY_PROJECT="your-project"
